{
  "name": "project-management-platform",
  "version": "1.0.0",
  "description": "A full-stack project management platform with React and Express",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "start": "cd backend && npm start",
    "docker:build": "docker build -t project-platform .",
    "docker:run": "docker run -p 3000:3000 project-platform"
  },
  "keywords": [
    "react",
    "express",
    "project-management"
  ],
  "author": "Student",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "concurrently": "^8.2.0"
  }
}
