# Use Node LTS
FROM node:18

# Set working directory
WORKDIR /app

# Copy package.json and package-lock.json first (better caching)
COPY package*.json ./

# Install dependencies (backend + frontend)
RUN npm install

# Copy rest of the app
COPY . .

# Build frontend (webpack will place files into /public)
RUN npm run build

# Expose port
EXPOSE 3000

# Start backend
CMD ["npm", "start"]
